<form method="post" name="app_procuration_proposal">
    {{ form_errors(form) }}

    <div>
        <h4>Informations assesseur 2/3</h4>
    </div>

    {{ dump(assessorRequest) }}

    <div class="l__row l__row--h-stretch register__form--full">
        {{ form_label(form.assessorCity, 'Ville') }}
        {{ form_widget(form.assessorCity, { attr: { placeholder: 'Ville où vous souhaitez être assesseur' } }) }}
        {{ form_errors(form.assessorCity) }}
    </div>

    <div class="form__row">
        {{ form_label(form.assessorCountry, 'Le pays ') }}
        {{ form_widget(form.assessorCountry, { attr: { class: 'form--full' } }) }}
    </div>

    <div class="form__row">
        {{ form_label(form.assessorPostalCode, 'Le code postal') }}
        {{ form_widget(form.assessorPostalCode, { attr: { class: 'form--full', placeholder: 'Code postal' } }) }}
    </div>

    <div class="l__row l__row--h-stretch register__form--full">
        {{ form_label(form.office, 'Fonction') }}
        {{ form_widget(form.office) }}
        {{ form_errors(form.office) }}
    </div>

    <br/>

    <div class="l__row l__row--h-stretch register__form--full">
        {{ form_label(form.votePlaceWishes, 'Bureau de  vote') }}
        {{ form_widget(form.votePlaceWishes, { attr: { class: 'multi_vote_place_wishes' } }) }}
        {{ form_errors(form.votePlaceWishes) }}
    </div>

    <div class="text--center b__nudge--top-large">
        <a href="{{ path('app_assessor_request_back') }}" class="btn">Retour</a>
        {{ form_widget(form.fill_assessor_info, { attr: {class: 'btn btn--blue'}}) }}
    </div>

    {{ form_end(form) }}
</form>
