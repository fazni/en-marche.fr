{% extends 'assessor_manager/_layout.html.twig' %}

{% block assessor_manager_content %}
    <div class="text--summary b__nudge--bottom-large">
        <a href="{{ path('app_assessor_manager_request', { id: request.id }) }}" class="back-to-list icon--with-text">
            {{ include('components/caret--left.html.twig') }}
            Retour à la demande
        </a>
    </div>

    <h3 class="b__nudge--bottom-large">
        Associer la demande n°{{ request.id }} à {{ votePlace.name }}
    </h3>

    <hr />

    <div class="l__row l__tablet--col l__row--center l__row--top">
        <div class="assessor-manager__associate__col">
            <h4 class="b__nudge--bottom">
                Demande
            </h4>

            <div class="profile-label">
                Auteur
            </div>
            <div class="profile-value">
                {{ request.gender == 'male' ? 'Monsieur' : 'Madame' }}
                {{ request.firstName }} {{ request.lastName }}
            </div>

            <div class="profile-label">
                Coordonnées
            </div>
            <div class="profile-value">
                Email :
                <a href="mailto:{{ request.emailAddress }}">
                    {{ request.emailAddress }}
                </a>
                {% if request.phone %}
                    <br />
                    Téléphone :
                    <a href="tel:{{ request.phone|phone_number_format(constant('\\libphonenumber\\PhoneNumberFormat::RFC3966')) }}">
                        {{ request.phone|phone_number_format }}
                    </a>
                {% endif %}
            </div>

            <div class="profile-label">
                Date de naissance
            </div>
            <div class="profile-value">
                {{ request.birthdate|date('d/m/Y') }}
            </div>

            <div class="profile-label">
                Lieu de vote
            </div>
            <div class="profile-value">
                {{ request.assessorPostalCode }} {{ request.assessorCity }}
            </div>

            <div class="profile-label">
                Lieu de résidence
            </div>
            <div class="profile-value">
                {{ request.address }}<br />
                {{ request.postalCode }} {{ request.city }}
            </div>
        </div>

        <div class="procuration-manager__associate__col">
            <h4 class="b__nudge--bottom">
                Bureau de vote
            </h4>

            <div class="profile-label">
                Nom
            </div>
            <div class="profile-value" id="proxy-author">
                {{ votePlace.name }}
            </div>

            <div class="profile-label">
                Coordonnées
            </div>
            <div class="profile-value">
                {{ votePlace.address }}<br />
                {{ votePlace.postalCode }} {{ request.city }}
            </div>

            <div class="profile-label">
                Disponibilités
            </div>
            <div class="profile-value">
                <span id="proxy-election">
                    {{ votePlace.availableOfficesAsString|nl2br }}}
                </span>
            </div>
        </div>
    </div>

    <hr />

    <div class="text--center b__nudge--bottom-60">
        <form method="post" name="app_associate">
            {{ form_rest(form) }}

            <button type="submit" class="btn btn--primary">
                Associer
            </button>

            <a href="{{ path('app_assessor_manager_request', {'id': request.id}) }}" class="btn">
                Retour
            </a>
        </form>
    </div>
{% endblock %}
